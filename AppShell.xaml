<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Farm.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Farm"
    xmlns:views="clr-namespace:Farm.Views"
    Shell.NavBarIsVisible="false"
    Title="FarmX"
    >

    <TabBar>
        <Tab Title="Dashboard">
            <ShellContent ContentTemplate="{DataTemplate views:DashBoard}"/>
        </Tab>
        <Tab Title="Livestock">
            <ShellContent ContentTemplate="{DataTemplate views:Livestock}"/>
        </Tab>
        <Tab Title="Reports">
            <ShellContent ContentTemplate="{DataTemplate views:Report}"/>
        </Tab>
       
       
    </TabBar>

</Shell>


