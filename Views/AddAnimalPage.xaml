<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Farm.Views.AddAnimalPage"
             xmlns:viewmodel="clr-namespace:Farm.ViewModels"
             x:DataType="viewmodel:AddAnimalPageVM"
             Shell.PresentationMode="ModalAnimated"
             Title="AddAnimalPage">
    <Grid ColumnDefinitions="50,*,*,50"  ColumnSpacing="30" RowDefinitions="50,*,50,20">
        <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" RowSpacing="20">
            <Label Text="Select Type: " FontSize="18" Grid.Column="0" Grid.Row="0" HorizontalOptions="Start" VerticalOptions="Center"/>
            <Picker ItemsSource="{Binding TypeOptions}" Grid.Column="1"  SelectedIndex="0" SelectedItem="{Binding AnimalType}"/>
            <Label Text="Weight (KG):  " FontSize="18" Grid.Column="0" Grid.Row="1" HorizontalOptions="Start" VerticalOptions="Center"/>
            <Entry Grid.Column="1" Grid.Row="1" Placeholder="0.0"/>
            <Label Text="Colour: " FontSize="18" Grid.Column="0" Grid.Row="2" HorizontalOptions="Start" VerticalOptions="Center"/>
            <Entry Grid.Column="1" Grid.Row="2" Placeholder="Red"/>
            <Label Text="Expense (Per Day): " FontSize="18" Grid.Column="0" Grid.Row="3" HorizontalOptions="Start" VerticalOptions="Center"/>
            <Entry Grid.Column="1" Grid.Row="3" Placeholder="0.0"/>
            <Label Text="{Binding ProductToDisplay}" FontSize="18" Grid.Column="0" Grid.Row="4" HorizontalOptions="Start" VerticalOptions="Center"/>
            <Entry Grid.Column="1" Grid.Row="4"/>
        </Grid>
        <Button Text="Return" Command="{Binding ReturnToMenuCommand}" Grid.Column="1" Grid.Row="2"/>
        <Button Text="Save" Command="{Binding SaveCommand}" Grid.Column="2" Grid.Row="2"/>
    </Grid>
</ContentPage>