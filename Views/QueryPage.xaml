<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Farm.Views.QueryPage"
             xmlns:viewmodel="clr-namespace:Farm.ViewModels"
             x:DataType="viewmodel:QueryPageVM"
             Shell.PresentationMode="ModalAnimated"
             Title="QueryPage">
    <Grid ColumnDefinitions="50,*,*,*,50" RowDefinitions="50,*,50,50" RowSpacing="20" ColumnSpacing="50">
        <Grid Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="1" ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto" RowSpacing="20">
            <Label Text="Select Type: " FontSize="18" Grid.Column="0" Grid.Row="0" HorizontalOptions="Start" VerticalOptions="Center"/>
            <Picker SelectedItem="{Binding SelectedType}" ItemsSource="{Binding Types}" Grid.Row="0" Grid.Column="1"/>

            <Label Text="Weight: " FontSize="18" Grid.Column="0" Grid.Row="1" HorizontalOptions="Start" VerticalOptions="Center"/>
            <HorizontalStackLayout Grid.Row="1" Grid.Column="1" HorizontalOptions="Fill" Spacing="20">
                <Label Text="Min" FontSize="18" VerticalOptions="Center" HorizontalOptions="Fill"/>
                <Entry Text="{Binding MinWeight}" HorizontalOptions="Fill" VerticalOptions="Center" MinimumWidthRequest="90"/>
                <Label Text="Max" FontSize="18" VerticalOptions="Center" HorizontalOptions="Fill"/>
                <Entry Text="{Binding MaxWeight}" HorizontalOptions="Fill" VerticalOptions="Center" MinimumWidthRequest="90"/>
            </HorizontalStackLayout>
            
            <Label Text="Colour: " FontSize="18" Grid.Column="0" Grid.Row="2" HorizontalOptions="Start" VerticalOptions="Center"/>
            <Entry Grid.Row="2" Grid.Column="1" Text="{Binding Color}"/>

            <Label Text="Expense: " FontSize="18" Grid.Column="0" Grid.Row="3" HorizontalOptions="Start" VerticalOptions="Center"/>
            <HorizontalStackLayout Grid.Row="3" Grid.Column="1" HorizontalOptions="Fill" Spacing="20">
                <Label Text="Min" FontSize="18" VerticalOptions="Center" HorizontalOptions="Fill"/>
                <Entry Text="{Binding MinWeight}" HorizontalOptions="Fill" VerticalOptions="Center" MinimumWidthRequest="90"/>
                <Label Text="Max" FontSize="18" VerticalOptions="Center" HorizontalOptions="Fill"/>
                <Entry Text="{Binding MaxWeight}" HorizontalOptions="Fill" VerticalOptions="Center" MinimumWidthRequest="90"/>
            </HorizontalStackLayout>
            
            <Label Text="{Binding MilkOrWool, StringFormat='{0}: '}" FontSize="18" Grid.Column="0" Grid.Row="4" HorizontalOptions="Start" VerticalOptions="Center"/>
            <HorizontalStackLayout Grid.Row="4" Grid.Column="1" HorizontalOptions="Fill" Spacing="20">
                <Label Text="Min" FontSize="18" VerticalOptions="Center" HorizontalOptions="Fill"/>
                <Entry Text="{Binding Minproduct}" HorizontalOptions="Fill" MinimumWidthRequest="90" VerticalOptions="Center"/>
                <Label Text="Max" FontSize="18" VerticalOptions="Center" HorizontalOptions="Fill"/>
                <Entry Text="{Binding Maxproduct}" HorizontalOptions="Fill" VerticalOptions="Center" MinimumWidthRequest="90"/>
            </HorizontalStackLayout>

        </Grid>

        <Button Text="Back" Grid.Row="2" Grid.Column="1" Command="{Binding ReturnToMenuCommand}"/>
        <Button Text="Apply" Grid.Row="2" Grid.Column="2" Command="{Binding ApplyCommand}"/>
        <Button Text="View Statistics" Grid.Row="2" Grid.Column="3" Command="{Binding StatisticsCommand}"/>
    </Grid>
</ContentPage>