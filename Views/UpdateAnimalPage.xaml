<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Farm.Views.UpdateAnimalPage"
             xmlns:viewmodel="clr-namespace:Farm.ViewModels"
             x:DataType="viewmodel:UpdateAnimalPageVM"
             Shell.PresentationMode="ModalAnimated"
             Title="UpdateAnimalPage">
    <Grid ColumnDefinitions="50,*,*,50" RowDefinitions="*,*,*,*,*,*" ColumnSpacing="20" RowSpacing="20">
        <Grid Grid.Row="0" Grid.RowSpan="5" Grid.ColumnSpan="2" Grid.Column="1">
            <Label Text="ID"/>
        </Grid>
        
        <Button Grid.Column="1" Grid.Row="5" Text="Return" Command="{Binding ReturnToMenuCommand}"/>
        <Button Grid.Column="2" Grid.Row="5" Text="Save" Command="{Binding UpdateCommand}"/>
    </Grid>
</ContentPage>