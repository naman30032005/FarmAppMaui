<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Farm.Views.Livestock"
             xmlns:viewmodel="clr-namespace:Farm.ViewModels"
             xmlns:model="clr-namespace:Farm.Model"
             x:DataType="viewmodel:LivestockPageVM"
             Title="Livestock">
    <Grid RowDefinitions="*,Auto,20" RowSpacing="10">
        <CollectionView ItemsSource="{Binding animals}"
                        SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Animal">
                    <Grid ColumnDefinitions="*,*,*,*,*,*">
                        <Label Text="{Binding AnimalType}" Grid.Column="0"/>
                        <Label Text="{Binding ID}" Grid.Column="1"/>
                        <Label Text="{Binding Weight}" Grid.Column="2"/>
                        <Label Text="{Binding Colour}" Grid.Column="3"/>
                        <Label Text="{Binding Expense}" Grid.Column="4"/>
                        <Label Text="{Binding Milk}" Grid.Column="5" 
                        IsVisible="{Binding AnimalType, Converter={StaticResource CowVisibilityConverter}}"/>
                        <Label Text="{Binding Wool}" Grid.Column="5" 
                        IsVisible="{Binding AnimalType, Converter={StaticResource SheepVisibilityConverter}}"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>
    </Grid>
</ContentPage>